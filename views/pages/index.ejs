<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="colorlib.com">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,800" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/stylesheets/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/task-stud.css">
    <title>Задание. Студенты</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			  <div class="navbar-nav">
				<a class="nav-item nav-link" href="/tasks">Задания</a>
				<a class="nav-item nav-link" href="/students">Студенты</a>
			  </div>
			</div>
		</nav>

    <div class="container">

      <div class="title">
        <h3>
          {{ title }}
        </h3>
      </div>

      <div class="s006">
        <form>
          <fieldset>
            <legend>Введите имя студента</legend>
            <div class="inner-form">
              <div class="input-field">
                <button class="btn-search" @click="search" type="button">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                  </svg>
                </button>
                <input id="search" type="text" v-model="searchText" placeholder="Алекс Хитч" />
              </div>
            </div>
          </fieldset>
        </form>
      </div>

      <div class="content">
      
        <ul class="list-group custom-ul">
          <li class="list-group-item" v-for="(student, index) in students">
            <div class="name-div">
              <p id="name">{{ `${student.name} ${student.last_name}` }}</p>
            </div>
            <div class="checkbox-div"> 
              <input type="checkbox" :id="index" :checked="pareseStatus(student.tasks)" @click="changeStatus(student._id, index)">
            </div>
          </li>
        </ul>
  
      </div>

    </div>

    <script src="/scripts/task.student.js" type="module"></script>
  </body>
</html>
